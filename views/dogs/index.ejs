<!-- NAV BAR -->
<nav>
    <ul class="nav nav-pills justify-content-space-evenly">
        <li class="nav-item"><a href="/dogs/<%= user.id %>/favoriteDogs">Your Favorite Dogs</a></li>
        <li class="nav-item"><a href="/dogs/<%= user.id %>">Search Puppies</a></li>
        <li class="nav-item"><a href="/users/<%= user.id %>/view">Your Account Details</a></li>
        <li class="nav-item"><a href="/users/login">Sign Out</a></li>
    </ul>
</nav>

<h5>We've searched the postal code: <%= user.zipCode %> </h5>
<!-- advanced search section -->
<form action="/dogs/<%= user.id %>/advancedSearch?_method=GET" method="POST">
    <div class="form-group row">
        <label for="breed">Breed</label>
        <input class="form-control" type="text" id="breed" name="breed">
    </div>
    <div class="form-group row">
        <label for="size">Gender</label>
        <input class="form-control" type="text" id="gender" name="gender">
    </div>
    <div class="form-group row">
        <input class="form-control btn btn-primary" type="submit" value="Search">
    </div>
</form>

<!-- card for each dog loaded from API -->
<% for( let index = 0; index < dogs.length; index++ ) { %>
    <div class="card" style="width: 25rem;">
        <div class="card-header">
            <h3><%= dogs[index].name %> <h6><%= dogs[index].contact.address.city %>, <%= dogs[index].contact.address.state %> </h6></h3>
        </div>
        <div class="d-flex flex-column align-items-center">
            <div class="card-body">
                <h4 class="card-title"> Dog Details</h4>
                <p class="card-text">Age: <%= dogs[index].age %></p>
                <p class="card-text">Gender: <%= dogs[index].gender %></p>
                <p class="card-text">Primary Breed: <%= dogs[index].breeds.primary %></p>
                <p class="card-text">Secondary Breed: <%= dogs[index].breeds.secondary %></p>
            </div>
    
            <form action="/dogs/<%= user.id %>/<%= dogs[index].id %>" method="POST">
                <input class="btn btn-primary" type="submit" value="Add Dog to List">
            </form>
        </div>
        <br>
    </div> 
    <br>
<% } %>




