<!-- form to register an account with Adopt-A-Dog -->
<br>
<h3>Register</h3>
<form action="/users" method="POST">
    <div class="row">
        <!-- username & password section -->
        <div class="col">
            <div class="form-group">
                <label for="username">Username</label>
                <input class="form-control" type="text" name="username" id="username"> 
            </div>
            <div class="form-group">
                <label for="pwd">Password</label>
                <input class="form-control" type="password" name="password" id="pwd"> 
            </div>
        </div>
        <!-- name and zipcode section -->
        <div class="col">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" id="name"> 
            </div>
            <div class="form-group">
                <label for="zipCode">Enter your ZipCode</label>
                <input class="form-control" type="text" name="zipCode" id="zipCode"> 
            </div>
        </div>
    </div>
    <!-- register button -->
    <div class="form-group">
        <input class="form-control btn btn-primary" type="submit" value="Register Me!">
    </div>
</form>
<br>
