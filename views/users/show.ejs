    </ul>
</nav>
<h2>Account Details</h2>
<div id="account-details">
    <p>Name: <%= user.name %> </p>
    <p>ZipCode: <%= user.zipCode %> </p>
    <p>Username: <%= user.username %> </p>
    <p>Favored Dogs</p>
    <ul>
        <% for( let index = 0; index < user.favoriteDogs.length; index++ ) { %>
            <li><a href=""><%= user.favoriteDogs[index].name %> </a></li>
        <% } %>
    </ul>
    <a href="/users/<%= user.id %>/edit"> Edit Account Details</a>
    <form action="/users/<%= user.id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete My Account">
    </form>
</div>
